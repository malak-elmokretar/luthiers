            </select>


        <label for="inputNom" class="sr-only">Nom :</label>
        <input type="text" id="inputNom" name="inputNom" class="form-control" required>

        <label for="inputPrenom" class="sr-only">Prénom :</label>
        <input type="text" id="inputPrenom" name="inputPrenom" class="form-control" required>

        <label for="inputEmail" class="sr-only">E-mail :</label>
        <input type="email" id="inputEmail" name="inputEmail" class="form-control" required>
        
        <label for="inputTelephone" class="sr-only">
            Numéro de téléphone : <br>
            <small>Format requis : <span style="font-weight:bold">0</span>123456789</small>
        </label>
        <input type="tel" id="inputTelephone" name="inputTelephone" class="form-control" required minlength="10" maxlength="10" pattern="0{1}[0-9]{9}">

        <label for="inputMessage" class="sr-only">Message</label>
        <input type="text" id="inputMessage" name="inputMessage" class="form-control" required minlength="3" maxlength="255">

        <button class="btn btn-lg btn-primary btn-block" type="submit" name="btnContacter">Envoyer</button>
    </form>
</div>
